
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.github.ksoichiro.android.observablescrollview.ObservableScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <FrameLayout
                android:id="@+id/imageholder"
                android:layout_width="match_parent"
                android:layout_height="@dimen/parallax_image_height">

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/parallax_image_height"
                    android:scaleType="centerCrop"
                    android:src="@drawable/placeholder" />
                <View
                    android:id="@+id/overlay"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/parallax_image_height"/>
                <View
                    android:id="@+id/anchor"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/parallax_image_height"
                    android:minHeight="@dimen/parallax_image_height" />

                <TextView
                    android:id="@+id/body"
                    android:layout_below="@id/anchor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center"
                    android:layout_centerInParent="true"
                    android:textColor="#fff"

                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:typeface="serif"
                    android:text="Hello" />



            </FrameLayout>


            <FrameLayout
                android:id="@+id/Framelayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:background="@drawable/location"

                android:layout_below="@+id/imageholder">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/descriptiondata"
                        android:text="hello"
                        android:layout_marginLeft="5dp"
                        android:textSize="20dp"
                        android:textColor="@color/secondaryTextColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                </RelativeLayout>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/BulletFramelayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_below="@+id/Framelayout"
                android:background="@drawable/location"

                >
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:id="@+id/timingLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/TimeBulletPointsdata"
                            android:text="Recommended Travel Span"
                            android:layout_marginLeft="5dp"
                            android:textStyle="bold"
                            android:textSize="20dp"
                            android:textColor="@color/secondaryTextColor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"

                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/waiterLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="6dp"
                        android:layout_below="@+id/timingLayout"
                        android:layout_marginTop="4dp">

                        <TextView
                            android:id="@+id/WaiterBulletPointsdata"
                            android:text=""
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/secondaryTextColor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"

                            />
                    </RelativeLayout>
                </RelativeLayout>
            </FrameLayout>

             </RelativeLayout>

    </com.github.ksoichiro.android.observablescrollview.ObservableScrollView>

    <RelativeLayout android:layout_width="fill_parent"
        android:layout_height="fill_parent" android:gravity="bottom">

        <Button android:layout_width="fill_parent"
            android:background="@color/primary"
            android:id="@+id/planbutton"
            android:layout_height="wrap_content"
            android:text="Plan Your Trip"
            android:textColor="#fff"
            />

    </RelativeLayout>

    <TextView
        android:id="@+id/id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"

        />

    <TextView
        android:id="@+id/checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        />


    <include layout="@layout/gradient_header" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        app:popupTheme="@style/Theme.AppCompat.Light.DarkActionBar"
        app:theme="@style/Toolbar" />


</FrameLayout>